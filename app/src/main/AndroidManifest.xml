<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ergun.mymoviedb">

    <application
        android:name="id.ergun.mymoviedb.ui.App"
        android:fullBackupContent="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="id.ergun.mymoviedb.ui.module.main.MainActivity"
            android:label="My MovieDB">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.module.movie.detail.MovieDetailActivity" />
      <activity android:name=".ui.module.tv.detail.TvShowDetailActivity" />
    </application>
</manifest>
