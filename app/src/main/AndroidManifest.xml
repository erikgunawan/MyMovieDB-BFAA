<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ergun.mymoviedb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="id.ergun.mymoviedb.ui.App"
        android:fullBackupContent="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="id.ergun.mymoviedb.ui.module.main.MainActivity"
            android:label="My MovieDB"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.module.movie.detail.MovieDetailActivity"
            android:configChanges="orientation" />

        <activity
            android:name=".ui.module.search.SearchActivity"
            android:configChanges="orientation|locale|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.module.tv.detail.TvShowDetailActivity"
            android:configChanges="orientation" />

        <activity
            android:name=".ui.module.reminder.ReminderActivity"
            android:configChanges="orientation" />

        <receiver android:name=".ui.module.favorite.stackWidget.FavoriteBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_banner_widget_info" />
        </receiver>

        <service
            android:name=".ui.module.favorite.stackWidget.FavoriteStackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />


        <receiver
            android:name=".ui.notification.ReminderReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".ui.notification.ReminderService"
            android:enabled="true" />
    </application>
</manifest>
